{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen p-6 bg-indigo-900">
        <div class="w-full max-w-md">
            <div class="block w-full max-w-md text-center fill-current">
                <h1 class="text-3xl font-bold text-[#00df9a]">
                    <a href="{{ path('app_index') }}">
                        eSports Haven
                    </a>
                </h1>
            </div>
            <form method="post" class="mt-8 overflow-hidden bg-white rounded-lg shadow-xl">
                <div class="px-10 py-12">
                    <h1 class="text-3xl font-bold text-center">Welcome Back!</h1>
                    <div class="w-24 mx-auto mt-6 border-b-2"></div>
                    {% if error %}
                        <div class="mt-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
                            <span class="block sm:inline font-bold">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                        </div>
                    {% endif %}
                    <div class='mt-10'>
                        <label class="form-label" htmlFor='email'>
                            Email
                        </label>
                        <input id='email' class="form-input" name='email' type="email" value="{{ last_username }}"  autocomplete="email" required autofocus/>
                    </div>
                    <div class='mt-10'>
                        <label class="form-label" htmlFor='password'>
                            Password
                        </label>
                        <input id='password' class="form-input" name='password' type="password"/>
                    </div>
                    <div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                    <label class="flex items-center mt-6 select-none" htmlFor="remember">
                        <input
                                name="remember"
                                id="remember"
                                class="mr-1"
                                type="checkbox"
                        />
                        <span class="text-sm">Remember Me</span>
                    </label>
                </div>
                <div class="flex items-center justify-between px-10 py-4 bg-gray-100 border-t border-gray-200">
                    <a class="hover:underline" tabIndex="-1" href="#reset-password">
                        Forgot password?
                    </a>
                    <button class="bg-indigo-900 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}